@model WebBanSachOnline.Models.Sach

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin:10px auto;width:70%">
    <h2 style="text-align:center">THÔNG TIN CHI TIẾT CỦA SÁCH</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên sách
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenSach)
            </dd>

            <dt>
                Giá bán
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GiaBan)
            </dd>

            <dt>
                Mô tả
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MoTa)
            </dd>

            <dt>
                Ảnh bìa
            </dt>

            <dd>
                <img src="@Url.Content("~/Content/assets/image/" + @Model.AnhBia)" /> 
            </dd>

            <dt>
                Ngày cập nhật
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayCapNhat)
            </dd>

            <dt>
                Số lượng tồn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoLuongTon)
            </dd>

            <dt>
                Tên chủ đề
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ChuDe.TenChuDe)
            </dd>

            <dt>
                Tên nhà xuất bản
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.MaSach }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>