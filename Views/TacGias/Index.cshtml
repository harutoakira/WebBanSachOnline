@model IEnumerable<WebBanSachOnline.Models.TacGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin:10px auto;width:70%;">
    <h2 style="text-align:center"> THÔNG TIN CÁC TÁC GIẢ </h2>
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                Tên tác giả
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Tiểu sử
            </th>
            <th>
                Điện thoại
            </th>
            <th>
                Lệnh
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TieuSu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoai)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTacGia }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTacGia }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaTacGia }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

</div>
