@model  WebBanSachOnline.Models.KhachHangMVC
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutLog.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Đăng Nhập
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.LabelFor(m => m.TaiKhoan)
                                <input placeholder="Tài Khoản" name="txtTaiKhoan" class="form-control" type="text" />
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.MatKhau,new {@name = "sMatKhau" })
                                <input placeholder="Mật Khẩu" name="txtMatKHau" class="form-control" type="password" />
                            </div>
                            <div class="form-group">          
                                <input type="submit"  name="submit" class="btn btn-primary" value="Đăng Nhập"/>
                                <a class="btn btn-primary" href="@Url.Action("DangKy","User")">Đăng Ký</a>
                            </div>
                         }
                    </div>
                </div>
        </div>
    </div>


