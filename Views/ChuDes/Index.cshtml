@model IEnumerable<WebBanSachOnline.Models.ChuDe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin:10px auto;width:90%;">
    <h2 style="text-align:center"> THỂ LOẠI SÁCH </h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                Thể loại sách
            </th>
            <th>
                Mã thể loại
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenChuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaChuDe)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sừa", "Edit", new { id = item.MaChuDe }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaChuDe }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaChuDe }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>